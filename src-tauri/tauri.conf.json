{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "NoRiskClient",
    "version": "0.2.4"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "removeFile": true,
        "renameFile": true,
        "scope": [
          "**",
          "$APPDATA/**",
          "$APPDATA/*",
          "$APPDATA/",
          "$APPDATA"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "NoRisk",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "gg.norisk.noriskclient",
      "longDescription": "NoRiskClient Launcher to install and launch Minecraft with several new features",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "NoRiskClient Launcher",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "tauri.localhost",
          "windows": [
            "main"
          ],
          "enableTauriAPI": true
        }
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.norisk.gg/launcherapi/v1/launcher/releases/{{target}}/{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5QkZBNTBGNjhDQTBGOEYKUldTUEQ4cG9ENlcvbVpVTVdnVkNNSGlXWXVXRklqcGFxNnBuRW1LM3VDTXpKcXU2MmdCNVc5S2IK"
    },
    "windows": [
      {
        "title": "NoRiskClient",
        "width": 720,
        "height": 648,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ]
  }
}
